@{

    ViewData["Uyari"] = "Uyari mesaji";
    string hatamesaji = TempData["hata"] as string;
}
@ViewData["Uyari"]

@if (hatamesaji == "Oyle bir kullanici yok")
{
    // ViewBag.hata değeri "Boyle uye yok" ise
    <h1 style="color:red">Hata, Bu isimde kullanici yok</h1>
}
else
{
    // ViewBag.hata değeri yukarıdaki ile eşleşmezse (örneğin, kullanıcı zaten varsa)
    <h1 style="color:red">Hata, Bu isimde bir kullanici zaten var</h1>
}
