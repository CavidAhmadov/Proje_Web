@model IEnumerable<Proje_Web.Models.Randevu>
@{
    ViewData["Title"] = "Admin Paneli-Randevu olusturma";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@* FontAwesome İkonları için bu linki ekliyoruz *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="fa-solid fa-calendar-check me-2"></i> Randevu Listesi</h5>
            
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">@Html.DisplayNameFor(model => model.RandevuTarihi)</th>
                            <th>@Html.DisplayNameFor(model => model.HizmetTuru)</th>
                            <th>@Html.DisplayNameFor(model => model.HizmetAy)</th> @* HizmetAy yerine Süre/Ay başlığı *@
                            <th>@Html.DisplayNameFor(model => model.HizmetUcret)</th>
                            <th>@Html.DisplayNameFor(model => model.Egitmen)</th>
                            <th>@Html.DisplayNameFor(model => model.Uzmanlink_alani_hocanin)</th>
                            <th>islemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-secondary">
                                    <i class="fa-regular fa-clock me-1 text-primary"></i>
                                    @item.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.HizmetTuru</span>
                                </td>
                                <td>@item.HizmetAy</td>
                                <td class="text-success fw-bold">
                                    @item.HizmetUcret
                                </td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <div class="avatar-sm me-2">
                                            <i class="fa-solid fa-user-tie text-muted"></i>
                                        </div>
                                        <span>@item.Egitmen</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        <i class="fa-solid fa-medal me-1 text-warning"></i>
                                        @item.Uzmanlink_alani_hocanin
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="RandevuDuzenle" asp-route-id="@item.Id" class="admin-btn btn-edit">Düzenle</a>
                                    <a asp-action="RandevuSilOnay" asp-route-id="@item.Id" class="admin-btn btn-delete">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Özel Tasarım Dokunuşları */
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
    }

    .btn-group .btn {
        padding: 0.4rem 0.8rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f4f9;
        transition: all 0.2s ease-in-out;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    a {
        text-decoration: none !important;
    }

    .admin-btn {
        display: inline-block;
        padding: 6px 15px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    /* Düzenle Butonu */
    .btn-edit {
        color: #ffc107;
        border: 1px solid #ffc107;
        background-color: transparent;
    }

        .btn-edit:hover {
            background-color: #ffc107;
            color: #000;
            box-shadow: 0 4px 8px rgba(255, 193, 7, 0.3);
        }

    /* Sil Butonu */
    .btn-delete {
        color: #dc3545;
        border: 1px solid #dc3545;
        background-color: transparent;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: #fff;
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }
</style>