@model Proje_Web.Models.HizmetTurleri

@{
    ViewData["Title"] = "Delete islemi ";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fiyat)

        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fiyat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.sure)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sure)
        </dd>
    </dl>
    
    <form asp-action="Delete_hi" method="post">
        <input type="hidden" asp-for="Hizmet_turu" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <style>
            .btn-geri {
                background-color: #6c757d; /* Koyu Gri / Mevsimlik renk */
                color: white !important;
                text-decoration: none !important; /* Alt çizgiyi kesin olarak kaldırır */
                padding: 10px 25px;
                border-radius: 8px;
                display: inline-block;
                font-weight: 500;
                transition: background-color 0.3s ease, transform 0.2s ease;
                border: none;
            }

                .btn-geri:hover {
                    background-color: #5a6268; /* Üzerine gelince biraz daha koyulaşır */
                    text-decoration: none !important; /* Hover durumunda da çizgi çıkmaz */
                    transform: scale(1.02); /* Çok hafif büyüme efekti */
                    color: white !important;
                }
        </style>

        <a asp-action="hizmet" class="btn-geri">
            ← Geri Dön
        </a>
    </form>
</div>
