@model Proje_Web.Models.Randevu

@{
    ViewData["Title"] = "RandevuSilOnay";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>RandevuSilOnay</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RandevuTarihi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RandevuTarihi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HizmetTuru)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HizmetTuru)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HizmetAy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HizmetAy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HizmetUcret)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HizmetUcret)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Egitmen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Egitmen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uzmanlink_alani_hocanin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzmanlink_alani_hocanin)
        </dd>
       
    </dl>

    <form asp-action="RandevuSilOnay" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="form-check my-4 p-3 border rounded bg-light">
            <input class="form-check-input" type="checkbox" id="chkOnay" required>
            <label class="form-check-label fw-bold text-danger" for="chkOnay">
                Bu randevu kaydını kalıcı olarak silmeyi onaylıyorum.
            </label>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="randevu" class="btn btn-secondary">Vazgeç</a>
            <button type="submit" id="btnSil" class="btn btn-danger px-4" disabled>
                Kalıcı Olarak Sil
            </button>
        </div>
    </form>

    @section Scripts {
        <script>
            // Checkbox işaretlenmeden buton aktif olmaz
            document.getElementById('chkOnay').addEventListener('change', function() {
                document.getElementById('btnSil').disabled = !this.checked;
            });
        </script>
    }
