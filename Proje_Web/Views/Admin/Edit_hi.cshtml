@model Proje_Web.Models.HizmetTurleri

@{
    ViewData["Title"] = "Edit_hi";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Edit_hi</h1>

<h4>HizmetTurleri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit_hi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hizmet_turu" />
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sure" class="control-label"></label>
                <input asp-for="sure" class="form-control" />
                <span asp-validation-for="sure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <style>
        .btn-geri {
            background-color: #6c757d; /* Koyu Gri / Mevsimlik renk */
            color: white !important;
            text-decoration: none !important; /* Alt çizgiyi kesin olarak kaldırır */
            padding: 10px 25px;
            border-radius: 8px;
            display: inline-block;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            border: none;
        }

            .btn-geri:hover {
                background-color: #5a6268; /* Üzerine gelince biraz daha koyulaşır */
                text-decoration: none !important; /* Hover durumunda da çizgi çıkmaz */
                transform: scale(1.02); /* Çok hafif büyüme efekti */
                color: white !important;
            }
    </style>

    <a asp-action="hizmet" class="btn-geri">
        ← Geri Dön
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
