@model Proje_Web.Models.Antrenor

@{
    ViewData["Title"] = "Add_an";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Antenor ekle</h1>

<h4>Antrenor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add_an" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="isim" class="control-label"></label>
                <input asp-for="isim" class="form-control" />
                <span asp-validation-for="isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uzmanlik_alani" class="control-label"></label>
                <input asp-for="Uzmanlik_alani" class="form-control" />
                <span asp-validation-for="Uzmanlik_alani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hizmet_turleri" class="control-label"></label>
                <input asp-for="hizmet_turleri" class="form-control" />
                <span asp-validation-for="hizmet_turleri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musaitlik_saatleri" class="control-label"></label>
                <input asp-for="musaitlik_saatleri" class="form-control" />
                <span asp-validation-for="musaitlik_saatleri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" >Olustur</button>
            </div>
        </form>
    </div>
</div>

<div>
    <style>
        .btn-geri {
            background-color: #6c757d; /* Koyu Gri / Mevsimlik renk */
            color: white !important;
            text-decoration: none !important; /* Alt çizgiyi kesin olarak kaldırır */
            padding: 10px 25px;
            border-radius: 8px;
            display: inline-block;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            border: none;
        }

            .btn-geri:hover {
                background-color: #5a6268; /* Üzerine gelince biraz daha koyulaşır */
                text-decoration: none !important; /* Hover durumunda da çizgi çıkmaz */
                transform: scale(1.02); /* Çok hafif büyüme efekti */
                color: white !important;
            }
    </style>

    <a asp-action="antenor" class="btn-geri">
        ← Geri Dön
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
