@model IEnumerable<Proje_Web.Models.HizmetTurleri>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-concierge-bell me-2"></i>Hizmet Türleri</h3>
            
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Hizmet_turu)</th>
                            <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
                            <th>@Html.DisplayNameFor(model => model.sure)</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle fw-semibold text-dark">
                                    @Html.DisplayFor(modelItem => item.Hizmet_turu)
                                </td>
                                <td class="align-middle text-success fw-bold">
                                    @item.Fiyat
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-info text-dark">@item.sure </span>
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* FontAwesome ikonları için bu linki Layout dosyanıza veya buraya ekleyebilirsiniz *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .table thead th {
        border-top: none;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.3s;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }
</style>